@*Group 3-10, 4/7/22*@

@{
    ViewData["Title"] = "Crash Details";
}

@model utah_crashes_table
<h1 style="text-align:center">Crash #@Model.CRASH_ID</h1>
<br />

<div class="row m-1 p-1">

    <div class="col-6">
        <ul class="list-group">
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Crash ID
                <span class="badge badge-secondary">@Model.CRASH_ID</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Time of the crash
                <span class="badge badge-secondary">@Model.CRASH_DATETIME</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Main road
                <span class="badge badge-secondary">@Model.MAIN_ROAD_NAME</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                City
                <span class="badge badge-secondary">@Model.CITY</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                County
                <span class="badge badge-secondary">@Model.COUNTY_NAME</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Severity
                <span class="badge badge-secondary">@Model.CRASH_SEVERITY_ID</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Mile Point
                <span class="badge badge-secondary">@Model.MILEPOINT</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Latitude
                <span class="badge badge-secondary">@Model.LAT_UTM_Y</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Longitude
                <span class="badge badge-secondary">@Model.LONG_UTM_X</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Work Zone Related
                <span class="badge badge-secondary">@Model.WORK_ZONE_RELATED</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Pedestrian Involved
                <span class="badge badge-secondary">@Model.PEDESTRIAN_INVOLVED</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Bicyclist Involved
                <span class="badge badge-secondary">@Model.BICYCLIST_INVOLVED</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Motorcycle Involved
                <span class="badge badge-secondary">@Model.MOTORCYCLE_INVOLVED</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Improper Restraint
                <span class="badge badge-secondary">@Model.IMPROPER_RESTRAINT</span>
            </li>

            <li class="list-group-item d-flex justify-content-between align-items-center">
                Unrestrained
                <span class="badge badge-secondary">@Model.UNRESTRAINED</span>
            </li>

            <li class="list-group-item d-flex justify-content-between align-items-center">
                DUI
                <span class="badge badge-secondary">@Model.DUI</span>
            </li>

            <li class="list-group-item d-flex justify-content-between align-items-center">
                Intersection Related
                <span class="badge badge-secondary">@Model.INTERSECTION_RELATED</span>
            </li>
        </ul>
    </div>

    <div class="col-6">
            <div class="m-2">
                <a class="btn btn-outline-dark" asp-controller="Home" asp-action="Edit" asp-route-CrashId="@Model.CRASH_ID">Edit this Crash</a><br /><br />
                <a class="btn btn-outline-dark" asp-controller="Home" asp-action="Delete" asp-route-CrashId="@Model.CRASH_ID">Delete this Crash</a>
            </div><br />

            <p>
                Click Below to test this crash with different inputs to see how the severity prediction changes. 
                (i.e. If there was drowsy or distracted driving, it can affect the severity score)
            </p>

            <a class="btn btn-primary" asp-controller="Inference" asp-action="Populate"
               asp-route-bike="@Model.BICYCLIST_INVOLVED"
               asp-route-old="@Model.OLDER_DRIVER_INVOLVED"
               asp-route-dui="@Model.DUI"
               asp-route-city="@Model.CITY"
               asp-route-county="@Model.COUNTY_NAME"
               asp-route-ped="@Model.PEDESTRIAN_INVOLVED"
               asp-route-motor="@Model.MOTORCYCLE_INVOLVED"
               asp-route-imp="@Model.IMPROPER_RESTRAINT"
               asp-route-unr="@Model.UNRESTRAINED"
               asp-route-inter="@Model.INTERSECTION_RELATED"
               asp-route-wild="@Model.WILD_ANIMAL_RELATED"
               asp-route-over="@Model.OVERTURN_ROLLOVER"
               asp-route-comm="@Model.COMMERCIAL_MOTOR_VEH_INVOLVED"
               asp-route-single="@Model.SINGLE_VEHICLE"
               asp-route-dist="@Model.DISTRACTED_DRIVING"
               asp-route-drows="@Model.DROWSY_DRIVING"
               asp-route-road="@Model.ROADWAY_DEPARTURE">Populate Data into Predictor</a><br /><br />

        <ul class="list-group">
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Wild Animal Related
                <span class="badge badge-secondary">@Model.WILD_ANIMAL_RELATED</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Domestic Animal Related
                <span class="badge badge-secondary">@Model.DOMESTIC_ANIMAL_RELATED</span>
            </li>

            <li class="list-group-item d-flex justify-content-between align-items-center">
                Overturn Rollover
                <span class="badge badge-secondary">@Model.OVERTURN_ROLLOVER</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Commercial Vehicle Involved
                <span class="badge badge-secondary">@Model.COMMERCIAL_MOTOR_VEH_INVOLVED</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Teenage Driver Involved
                <span class="badge badge-secondary">@Model.TEENAGE_DRIVER_INVOLVED</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Older Driver Involved
                <span class="badge badge-secondary">@Model.OLDER_DRIVER_INVOLVED</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Night Dark Condition
                <span class="badge badge-secondary">@Model.NIGHT_DARK_CONDITION</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Single Vehicle
                <span class="badge badge-secondary">@Model.SINGLE_VEHICLE</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Distracted Driving
                <span class="badge badge-secondary">@Model.DISTRACTED_DRIVING</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Drowsy Driving
                <span class="badge badge-secondary">@Model.DROWSY_DRIVING</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                Roadway Departure
                <span class="badge badge-secondary">@Model.ROADWAY_DEPARTURE</span>
            </li>
        </ul>
    </div>
</div>





