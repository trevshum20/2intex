@*Group 3-10, 4/7/22*@

@{
    ViewData["Title"] = "Delete Crash";
}
@model utah_crashes_table
<h1>Confirm Deletion</h1>
<h3>Are you sure that you want to delete Crash #@Model.CRASH_ID?</h3>
<form method="post" asp-action="Delete">
    <button type="submit" class="btn btn-sm" style="background-color: red">Delete</button>
    <a asp-controller="Home" asp-action="Summary" class="btn btn-sm" style="background-color: turquoise">Cancel</a>

    <input type="hidden" asp-for="CRASH_ID" />
</form>